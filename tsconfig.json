{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "typeRoots": ["./node_modules/@types", "@types"],

    "outDir": "dist/",
    "sourceMap": true,
    "moduleResolution": "node",
    "noEmitOnError": true,
    "declaration": true,
    "removeComments": false,
    "noImplicitAny": true,
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": ["node_modules", "coverage/lcov-report"]
}
